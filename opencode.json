{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "shadcn": {
            "type": "local",
            "command": ["npx", "shadcn@latest", "mcp"],
            "enabled": true
        },
        "next-devtools": {
            "type": "local",
            "command": ["npx", "-y", "next-devtools-mcp@latest"],
            "enabled": true
        },
        "playwright": {
            "type": "local",
            "command": ["npx", "@playwright/mcp@latest"],
            "enabled": true
        },
        "Prisma-Local": {
            "type": "local",
            "command": ["npx", "-y", "prisma", "mcp"],
            "enabled": true
        }
    },
    "permission": {
        "webfetch": "allow",
        "edit": "allow",
        "question": "allow",
        "todowrite": "allow",
        "skill": "allow"
    }
}
